<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="ASYNC" class="org.apache.log4j.AsyncAppender">
	        <appender-ref ref="FileLog"/>
		<appender-ref ref="CONSOLE"/>
	</appender>

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
  		     <param name="ConversionPattern" 
                            value="%d %-5p %c{1}.%M - %m%n"/>
		</layout>
	</appender>
	
	<appender name="FileLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<param name="File" value="/var/log/WebSphere/FileLog.log"/>
		<layout class="org.apache.log4j.PatternLayout">
  		     <param name="ConversionPattern" 
                            value="%d %-5p %c{1}.%M - %m%n"/>
		</layout>
	</appender>
	
	<appender name="FileJFigLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<param name="File" value="/var/log/WebSphere/FileJFigLog.log"/>
		<layout class="org.apache.log4j.PatternLayout">
  		     <param name="ConversionPattern" 
                            value="%d %-5p %c{1}.%M - %m%n"/>
		</layout>
	</appender>
	
	<appender name="FileGeneralLog" class="org.apache.log4j.RollingFileAppender">
		<param name="MaxFileSize" value="1000000"/>
		<param name="MaxBackupIndex" value="1"/>
		<param name="File" value="/var/log/WebSphere/FileGeneralLog.log"/>
		<layout class="org.apache.log4j.PatternLayout">
  		     <param name="ConversionPattern" 
                            value="%d %-5p %c{1}.%M - %m%n"/>
		</layout>
	</appender>
	
	<appender name="CommonSIGLog" class="org.apache.log4j.RollingFileAppender">
		<param name="MaxFileSize" value="1000000"/>
		<param name="MaxBackupIndex" value="1"/>
		<param name="File" value="/var/log/WebSphere/CommonSIGLog.log"/>
		<layout class="org.apache.log4j.PatternLayout">
  		     <param name="ConversionPattern" 
                            value="%m%n"/>
		</layout>
	</appender>
	
	<appender name="StatisticLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<param name="File" value="/var/log/WebSphere/Statistic.log"/>
		<layout class="org.apache.log4j.PatternLayout">
  		     <param name="ConversionPattern" 
                            value="%m%n"/>
		</layout>
	</appender>

	<category name="statis" additivity="false">
		<priority value="debug"/>
		<appender-ref ref="StatisticLog"/>
	</category>

	<category name="org.igfay" additivity="false">
		<priority value="info"/>
		<appender-ref ref="FileJFigLog"/>
	</category>
	
	<category name="ConfigDetail" additivity="false">
		<priority value="info"/>
		<appender-ref ref="FileJFigLog"/>
	</category>
	
	<category name="org.apache" additivity="false">
		<priority value="info"/>
		<appender-ref ref="FileJFigLog"/>
	</category>
	
	<category name="appl" additivity="false">
		<priority value="debug"/>
		<appender-ref ref="FileGeneralLog"/>
	</category>
	
	<category name="sig" additivity="false">
		<priority value="debug"/>
		<appender-ref ref="CommonSIGLog"/>
	</category>
	
	<category name="sig.SigView.ProtocolLogger" additivity="false">
		<priority value="debug"/>
	</category>
	
	<category name="sig.SigView.StatisticLogger" additivity="false">
		<priority value="debug"/>
	</category>
	
	<root>
	   <priority value ="debug" />
   	   <appender-ref ref="ASYNC" />
	</root>
	
</log4j:configuration>
